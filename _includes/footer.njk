            </a>
            <a href="{{ contacts.facebook }}">
                <i class="fab fa-facebook-square fa-2x"></i>
            </a>
        </div>
        <div>
            {% for item in collections.all | eleventyNavigation %}
                <a href="{{ item.url }}" class="inline-flex items-center pr-6 font-light text-white hover:text-primary-600 transition">{{ item.key | upper }}</a>
            {% endfor %}
        </div>
    </div>
